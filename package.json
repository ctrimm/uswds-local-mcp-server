{
  "name": "uswds-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for USWDS development with React component support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "uswds-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsc && node dist/index.js",
    "start": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "uswds",
    "design-system",
    "accessibility",
    "react-uswds"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.0",
    "cheerio": "^1.0.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  }
}
